### BEGIN INIT INFO
# Provides:		hw-management-thermal-control
# Required-Start: $local_fs $network $remote_fs $syslog $hw-management
# Required-Stop: $local_fs $network $remote_fs $syslog
# Default-Start: 2 3 4 5
# Default-Stop:  0 1 6
# Short-Description: <Thermal control for Mellanox systems>
# Description: <Thermal control for Mellanox systems>
### END INIT INFO

# Available options:
# start	- 
# stop	- 
# suspend - 
# resume - 
#

SCRIPT_NAME=hw-management-thermal-control.py
THERMAL_SCRIPT=/usr/bin/$SCRIPT_NAME

case "$1" in

    start|restart|stop|suspend|resume)
        $THERMAL_SCRIPT $1 -d=1 -s=1 ${@:2}
        ;;
    *)
        echo "Usage: /etc/init.d/$SCRIPT_NAME {start|stop|restart|suspen||resume}"
        exit 1
        ;;

esac
exit 0
